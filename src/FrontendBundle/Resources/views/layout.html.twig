<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block metas %}{% endblock %}
    <title>{% block title %}SkyBlue®{% endblock %}</title>
    <meta property="og:url" content="{{ absolute_url(path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params'))) }}"/>
    {% block opengraph %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" href="{{ asset('assets/fonts/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
    {% block stylesheets %}{% endblock %}
    <link rel="shortcut icon" href="{{ asset('assets/img/icon.png') }}">
</head>

<body>
<div class="container">
    <img class="img-responsive header" src="{{ asset('assets/img/header.jpg') }}">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
            </div>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="nav navbar-nav">
                    <li role="presentation"><a href="{{ path('homepage') }}">Inicio</a></li>
                    {{ render(controller('FrontendBundle:Menu:menus')) }}
                    <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Distribuidores Autorizados<span class="caret"></span></a>
                        <ul class="dropdown-menu menu-right" role="menu" style="width: 500px;">
                            <div class="col-sm-4 hidden-xs">
                                <img src="{{ asset('assets/img/menu_4.jpg') }}" class="img-responsive">
                            </div>
                            {{ render(controller('FrontendBundle:Menu:nacional')) }}
                        </ul>
                    </li>
                    <li role="presentation"><a href="{{ path('contacto') }}">Contacto</a></li>
                </ul>
            </div>
        </div>
    </nav>
</div>
<div class="container">
    {% block body %}{% endblock %}
</div>
<div class="container">
    <div class="row margin-tb">
        <div class="col-md-12 footer">
            <hr>
            <p class="text-center">SkyBlue® es una marca registrada.</p>
            <p class="text-center">Todos los derechos reservados <span>{{ "now"|date("Y") }}</span></p>
        </div>
    </div>
</div>
<script src="{{ asset('assets/js/jquery.min.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/js/main.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>

</html>