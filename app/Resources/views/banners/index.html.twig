    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'SkyBlue','submenu':'Banners'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Banners</h3>
               {#<p class="text-muted m-b-30">{{ Banners</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>No.</th>  <th>Nombre</th> <th>Imagen</th>  <th>Link</th> <th>Activo</th>  <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for banner in banners %}
                    <tr>
                        <td>{{ i }}</td>  <td>{{ banner.nombre }}</td>    <td><img src="{{ asset('uploads/images/'~banner.imagen) }}" width="75"></td>   <td>{% if banner.link == null %}Sin Enlace{% else %}<a href="{{ banner.link }}" target="_blank">Enlace</a>{% endif %}</td>   <td>{{ banner.activo|sino }}</td>     <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('banners_show', { 'id': banner.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                        <a href="{{ path('banners_edit', { 'id': banner.id }) }}" data-toggle="tooltip" title="Editar" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
